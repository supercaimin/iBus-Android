<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.homecaught.ibus_jhr.activity.RegisterActivity">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">



        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="请在列表中选在您所在的学校"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Please choose your school from the list below"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="请您选择乘坐校车的孩子数量"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Please choose number of children who take school buses"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:id="@+id/rgSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHead"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rbOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="60dp"
                        android:checked="true"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/rbTow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="60dp"
                        android:text="2" />
                    <RadioButton
                        android:id="@+id/rbThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="60dp"
                        android:text="3" />
                </RadioGroup>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child1_tip"
                android:layout_height="wrap_content">

                <TextView
                    android:text="孩子一（Child 1）"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child1_last_name_v"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_last_name1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="姓（Last Name）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child1_first_name_v"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_first_name1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="名（Given Name）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child1_school_id_v"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/sn1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="学号（School ID）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPhonetic"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child2_tip" android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:text="孩子二（Child 2）"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child2_last_name_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_last_name2" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="姓（Last Name）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child2_first_name_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_first_name2" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="名（Given Name）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child2_school_id_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/sn2" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="学号（School ID）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPhonetic"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child3_tip" android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:text="孩子三（Child 3）"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child3_last_name_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_last_name3" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="姓（Last Name）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child3_first_name_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/child_first_name3" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="名（Given Name）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:id="@+id/child3_school_id_v" android:visibility="gone"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/sn3" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="学号（School ID）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPhonetic"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="请输入您的信息"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Please fill in the blanks with your information."
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/last_name" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="姓（Last Name）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/first_name" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="名（Given Name）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPersonName"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/mobile" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="手机（Mobile）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:enabled="false"
                    android:imeOptions="actionUnspecified" android:inputType="textPhonetic"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/mobileCode" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="验证码（Mobile）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPhonetic"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/email" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="邮箱（EMail）  选填(Optional)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textAutoComplete"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/password" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="密码（Password）  必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPassword"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText android:id="@+id/repassword" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="再次输入密码（Re-enter password）   必填(Required)"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPassword"
                    android:maxLines="1" android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="注册(Submit)"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
