            android:name="cn.homecaught.ibus_saas.activity.PwdActivity"
            android:label="@string/title_activity_pwd"
            android:screenOrientation="portrait" />
        <activity
            android:name="cn.homecaught.ibus_saas.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StartAppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 声明service组件 -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>
        <service
            android:name="cn.homecaught.ibus_saas.util.LocationService"
            android:enabled="true"
            android:exported="true" />

